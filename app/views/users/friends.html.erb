<div class="col-md-8 col-md-offset-2">
    

    
    <div class="row">
        <h3 class="page-header">Add Friend</h3>    
        <form class="" id="user-search-form" action="/friends" method="get">
            <div class="input-group">
                    <input type="text" name="q" class="form-control" placeholder="Username">
                    <span class="input-group-btn">
                    <button type="submit" class="btn btn-default" >Search</button>
                </span>
            </div>
        </form>   
    </div>
    
    <% unless @users.nil? %>
        <% if @users.empty? %>
            <p>Could not find user with that username</p>
        <% else %>
            <% @users.each do |user| %>
                <% if user.username != current_user.username %>
                    <%= render partial: 'shared/user_details', locals: {user: user} %>
                <% end %>     
            <% end %>
        <% end %>
    <% end %>
    
        
    <div class="row">
        <h3 class="page-header">Friends</h3>
        <% @followings.each do |following| %>
            <% if following.username != current_user.username %>
                    <%= render partial: 'shared/user_details', locals: {user: following} %>
            <% end %>  
        <% end %>
    </div>
    

    
</div>
