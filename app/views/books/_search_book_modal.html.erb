<div class="modal fade" id="book-<%=book.isbn%>" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
    
                    <div class="col-sm-4">
                        <%=image_tag  book.image_link, class:"img-responsive" %> 
                    </div>
                    <%= render partial: 'shared/new_book_options', locals: {book: book} %>
                </div>
    
            </div><!-- end row -->
        </div>
        <div class="modal-body">
          <p><%=book.description%></p>
        </div>
      </div>
    </div>
</div>